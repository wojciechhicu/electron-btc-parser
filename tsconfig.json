{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "./dist",
		"sourceMap": false,
		"types": ["electron", "node"],
		"allowJs": true
	},
	"include":  [
		"src/**/*.html",
		"src/**/*.ts",
		"src/**/*.css",
		"src/**/*.js"
	      ],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
